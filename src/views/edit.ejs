<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">

    <title>Update A User</title>
</head>

<body>
    <div class="topnav">
        <a href="/">Home</a>
        <a href="/create">Create User</a>

    </div>
    <div class="form-add-new">
        <form action="/update-user" method="POST">

            <fieldset>
                <legend>
                    Update a users
                </legend>
                <div class="input_group d-none">
                    <label>
                        ID
                    </label>
                    <input type="text" name="userId" value="<%=userEdit.id %>">
                </div>
                <div class="input_group">
                    <label>
                        Email :
                    </label>
                    <input type="text" name="Email" value="<%=userEdit.email %>">
                </div>
                <div class="input_group">
                    <label>
                        Name :
                    </label>
                    <input type="text" name="MyName" value="<%=userEdit.name %>">
                </div>
                <div class=" input_group">
                    <label>
                        City :
                    </label>
                    <input type="text" name="City" value="<%=userEdit.city %>">
                </div>
                <div>
                    <button>SAVE</button>
                </div>
            </fieldset>
        </form>

    </div>
</body>

</html>